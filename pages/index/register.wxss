.box {
  height: 1070rpx;
  width: 100%;
  background: rgb(235, 233, 233);
  padding-top: 120rpx;
}

.inputbox {
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid rgb(235, 233, 233);
  background: white;
}

.inputbox>text {
  font-size: 35rpx;
  display: block;
  float: left;
  height: 100rpx;
  width: 150rpx;
  margin-left: 20rpx;
  line-height: 100rpx;
}

.inputbox>input {
  font-size: 26rpx;
  display: block;
  float: left;
  height: 100rpx;
  width: 390rpx;
  line-height: 80rpx;
}

.btn {
  font-size: 35rpx;
  color: #d81e06;
  display: block;
  float: left;
  width: 188rpx;
  height: 100rpx;
  border-left: 1rpx solid rgb(235, 233, 233);
  text-align: center;
  line-height: 100rpx;
}

.tipsbox {
